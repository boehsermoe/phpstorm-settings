<templateSet group="html/xml">
  <template name="php" value="&lt;?php $SELECTION$ ?&gt;" description="Surround with &lt;?php ?&gt;" toReformat="true" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="XML" value="false" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="php if" value="&lt;?php if ($END$) : ?&gt;&#10;$SELECTION$&#10;&lt;?php endif ?&gt;" description="Surround with &lt;?php if () ?&gt; ... &lt;?php endif ?&gt;" toReformat="true" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="XML" value="false" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="div" value="&lt;div class=&quot;$END$&quot;&gt;&#10;    $SELECTION$&#10;&lt;/div&gt;" description="Surround with &lt;div class=&quot;&quot;&gt;&lt;/div&gt; in HTML/JSP" toReformat="true" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="XML" value="false" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="OTHER" value="false" />
    </context>
  </template>
</templateSet>