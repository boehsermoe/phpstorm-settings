<templateSet group="html/xml">
  <template name="php" value="&lt;?php $SELECTION$ ?&gt;" description="Surround with &lt;?php ?&gt;" toReformat="true" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="TSX_HTML" value="true" />
    </context>
  </template>
  <template name="php if" value="&lt;?php if ($END$) : ?&gt;&#10;$SELECTION$&#10;&lt;?php endif ?&gt;" description="Surround with &lt;?php if () ?&gt; ... &lt;?php endif ?&gt;" toReformat="true" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="TSX_HTML" value="true" />
    </context>
  </template>
  <template name="div" value="&lt;div class=&quot;$END$&quot;&gt;&#10;    $SELECTION$&#10;&lt;/div&gt;" description="Surround with &lt;div class=&quot;&quot;&gt;&lt;/div&gt; in HTML/JSP" toReformat="false" toShortenFQNames="false">
    <context>
      <option name="HTML" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="TSX_HTML" value="true" />
    </context>
  </template>
  <template name="php foreach" value="&lt;?php foreach ($DATA$ as $END$) : ?&gt;&#10;$SELECTION$&#10;&lt;?php endforeach; ?&gt;" description="Surround with &lt;?php foreach () ?&gt; ... &lt;?php endforeach; ?&gt;" toReformat="true" toShortenFQNames="false">
    <variable name="DATA" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Comment" value="false" />
      <option name="PHP Interface Member" value="false" />
      <option name="PHP Statement" value="false" />
      <option name="PHP String Literal" value="false" />
      <option name="PHP Trait Member" value="false" />
      <option name="TSX_HTML" value="true" />
    </context>
  </template>
</templateSet>